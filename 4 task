#include <iostream>
#include <cmath>
using namespace std;
int main()
{
	int number = 0; 
	char exit = 'y'; 
	for (;;)
	{
		cout << "Enter a number: ";
		cin >> number;
		cout << "Square " << number << " = " << pow(number, 3);
		cout << "\nContinue entering numbers - Y, Exit  - N: ";
		cin >> exit; 
		if (exit != 'y' && exit != 'Y')
			break; 
	}

	return 0;

}
